<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
>
	 <ScrollView 
	 	android:layout_marginBottom="55dip" 
	 	android:id="@+id/addContent" 
	 	android:layout_height="fill_parent" 
	 	android:layout_width="fill_parent"
	 >
	 	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:orientation="vertical"
		>
			<EditText 
		   		android:id="@+id/addName" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:hint="Alarm name"
				android:layout_marginTop="10dip"
			/>
			<View 
				android:layout_width="fill_parent" 
				android:layout_height="1dip" 
				android:background="#30303000" 
				android:layout_marginTop="10dip"
			/>
			<RelativeLayout
				android:id="@+id/addLocationLayout"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:focusable="true"
			>
				<ImageButton
					android:id="@+id/addLocationButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/location"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
				/>
				<TextView
					android:id="@+id/addLocationAddress"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="0 locations"
					android:layout_alignParentTop="true"
					android:layout_toRightOf="@+id/addLocationButton"
					android:textAppearance="?android:attr/textAppearanceMedium" 
					android:layout_marginLeft="10dip"
				/>
				<!-- <TextView
					android:id="@+id/addLocationAddress"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/addLocationTitle"
					android:layout_toRightOf="@+id/addLocationButton"
					android:textAppearance="?android:attr/textAppearanceSmall" 
					android:layout_marginLeft="5dip"
				/>
				<TextView
					android:id="@+id/addLocationLatLon"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="(-3.223593, 55.943704)"
					android:layout_below="@+id/addLocationAddress"
					android:layout_toRightOf="@+id/addLocationButton"
					android:textAppearance="?android:attr/textAppearanceSmall" 
					android:layout_marginLeft="10dip"
				/> -->
			</RelativeLayout>
			<View 
				android:layout_width="fill_parent" 
				android:layout_height="1dip" 
				android:layout_marginTop="10dip"
				android:background="#30303000"
			/>
			<EditText 
		   		android:id="@+id/addRadius" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:hint="Distance in metres"
				android:layout_marginTop="10dip"
				android:inputType="numberDecimal"
			/>
			<View 
				android:layout_width="fill_parent" 
				android:layout_height="1dip" 
				android:background="#30303000" 
				android:layout_marginTop="10dip"
			/>
		</LinearLayout>
	</ScrollView>
	<TableLayout
	    android:numColumns="2"
	    android:stretchMode="columnWidth"
		android:layout_marginTop="-55dip" 
		android:gravity="bottom" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:stretchColumns="*"
		android:background="@drawable/buttons"
		android:padding="5dip"
	>
		<TableRow
			android:id="@+id/widget34"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		>
				
			<Button 
				android:id="@+id/addButtonSave" 
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" 
				android:text="@string/button_ok" 
			/>
			<Button 
				android:id="@+id/addButtonCancel" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:text="@string/button_cancel" 
			/>
		</TableRow>
	</TableLayout>
</LinearLayout>

